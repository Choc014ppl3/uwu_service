# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_HTTP_PORT=8080
SERVER_ENV=development

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# AI Services (Base64-encoded service account JSON)
# Generate with: cat service-account.json | base64 | tr -d '\n'
GEMINI_SA_BASE64=your-base64-encoded-service-account
GCP_LOCATION=asia-southeast1

# Azure AI Speech
AZURE_AI_SPEECH_KEY=your-azure-speech-key
AZURE_SERVICE_REGION=eastus

# Azure OpenAI Whisper
AZURE_WHISPER_ENDPOINT=your-whisper-endpoint
AZURE_WHISPER_KEY=your-whisper-key
AZURE_WHISPER_REGION=your-whisper-region
AZURE_WHISPER_MODEL=your-whisper-model

# Azure OpenAI Chat Completion (for quiz generation)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_KEY=your-openai-key
AZURE_OPENAI_CHAT_MODEL=your-chat-model-deployment

# Database
POSTGRES_USER=uwu_user
POSTGRES_PASSWORD=uwu_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=uwu_service

# JWT
JWT_SECRET=your-jwt-secret-key

# Redis
REDIS_URL=redis://redis:6379

# Cloudflare R2
CLOUDFLARE_ACCESS_KEY_ID=your-access-key
CLOUDFLARE_SECRET_ACCESS_KEY=your-secret-key
CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
CLOUDFLARE_PUBLIC_URL=https://your-public-url.com
CLOUDFLARE_BUCKET_NAME=your-bucket-name

# Domain (for Caddy HTTPS)
DOMAIN=api.yourdomain.com

