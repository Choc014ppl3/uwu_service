# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_HTTP_PORT=8080
SERVER_GRPC_PORT=50051
SERVER_ENV=development

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# AI Services
OPENAI_API_KEY=your-openai-api-key
GEMINI_API_KEY=your-gemini-api-key

# Azure AI Speech
AZURE_AI_SPEECH_KEY=your-azure-speech-key
AZURE_SERVICE_REGION=eastus

# Google Cloud
GCP_PROJECT_ID=your-project-id
GCS_BUCKET_NAME=your-bucket-name
PUBSUB_TOPIC_ID=your-topic-id
PUBSUB_SUBSCRIPTION_ID=your-subscription-id

# Optional: Service Account Path (for local development)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Database (optional)
DATABASE_URL=postgres://user:password@localhost:5432/uwu_service?sslmode=disable

# Redis (optional)
REDIS_URL=redis://localhost:6379
